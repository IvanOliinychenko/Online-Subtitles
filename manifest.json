{
  "manifest_version": 2,
  "name": "Online Subtitles",
  "short_name" : "OnlineSub",
  "description": "Watch your favorite movies and shows online with subtitles.",
  "version": "0.1.7",
  "author": "Ivan Oliinychenko",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "onlineSub.html"
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "web_accessible_resources": [
    "images/settings.svg",
    "images/upload.svg",
    "icon.png"
  ],
  "background": {
    "scripts": ["onlineSubBackground.js"]
  },
  "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "all_frames": true,
        "js": ["onlineSubcontent.js"],
        "css":["onlineSub.css"],
        "run_at": "document_end" 
        }
    ], 
  "permissions": [
   "activeTab",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
   ]
}
